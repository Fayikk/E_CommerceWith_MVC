

@model PaymentModel

<style>
    .gradient-custom {
        background-blend-mode: screen, color-dodge, overlay, difference, normal;
    }
</style>

<section class="gradient-custom">
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center py-5">
            <div class="col-md-7 col-lg-5 col-xl-4">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-4">
                        <form method="post" asp-action="CreatePayment" asp-controller="Payment">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-outline">
                                    <input asp-for="@Model.CardNumber" type="text" id="typeText" class="form-control form-control-lg"
                                           placeholder="1234567890123457" minlength="16" maxlength="16" />
                                    <label class="form-label">Card Number</label>
                                </div>
                                <img src="https://img.icons8.com/color/48/000000/visa.png" alt="visa" width="64px" />
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-outline">
                                    <input asp-for="@Model.CardHolderName" type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                           placeholder="Cardholder's Name" />
                                    <label class="form-label">Cardholder's Name</label>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center pb-2">
                                <div class="form-outline">
                                    <input type="text" id="typeExp" asp-for="@Model.ExpireMonth" class="form-control form-control-lg" placeholder="MM"
                                           size="2" id="exp" minlength="2" maxlength="2" />
                                    <label class="form-label" for="typeExp">Expiration</label>
                                </div>
                                <div class="form-outline">
                                    <input type="text" id="typeExp" class="form-control form-control-lg" asp-for="@Model.ExpireYear" placeholder="YYYY"
                                           size="4" id="exp" minlength="4" maxlength="4" />
                                    <label class="form-label" for="typeExp">Expiration</label>
                                </div>
                                <div class="form-outline">
                                    <input type="password" id="typeText2" class="form-control form-control-lg"
                                           placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" asp-for="@Model.Cvc" />
                                    <label class="form-label" for="typeText2">Cvv</label>
                                </div>
                                <button type="submit" class="btn btn-info btn-lg btn-rounded">
                                    <i class="fas fa-arrow-right"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>